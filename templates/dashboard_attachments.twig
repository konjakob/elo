{% extends 'layout_dashboard.twig' %}

{% block default %}
<h1>Attachments</h1>
{% if files|length %}
There are {{ files|length }} files in the system.
<table class="uk-table uk-table-striped" id="table">
    <thead>
        <tr>
            <th>Filename</th>
			<th>Filesize</th>
			<th>Preview</th>
			<th>Actions</th>
        </tr>
    </thead>
    <tbody>
		{% for f in files %}
		<tr>
			<td>{{ f.filename }}</td>
			<td>{{ f.filesize }}</td>
			<td>{% if f.img_file %}<img src="{{ f.img_file }}" height="200">{% endif %}</td>
			<td>Details | Delete {% if not f.img_file %}<span>| <a class="generateFilePreview" data-id="{{ f.fileId }}">Generate Preview</a></span>{% endif %}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
{% else %}
There are no files.
{% endif %}

{% endblock %}

{% block footerInjection %}

{% endblock %}

